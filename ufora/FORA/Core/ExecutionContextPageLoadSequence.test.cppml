#include "../../core/UnitTest.hpp"
#include "ExecutionContextPageLoadSequence.hppml"

using namespace Fora::Interpreter;

namespace {

Fora::PageId page(long k)
	{
	return Fora::PageId(hash_type(k), 100 * 1024 * 1024, 100 * 1024 * 1024);
	}

const int64_t gb = 1024 * 1024 * 1024;

}

BOOST_AUTO_TEST_CASE( test_ExecutionContextPageLoadSequence_basic )
	{
	ExecutionContextPageLoadSequence seq;

	BOOST_CHECK(seq.observeAndReturnWantsReset(emptyTreeSet() + page(0), 0.0, gb));
	}

BOOST_AUTO_TEST_CASE( test_ExecutionContextPageLoadSequence_page_tie )
	{
	ExecutionContextPageLoadSequence seq;

	double epsilon = 0.00001;

	//create a clique
	BOOST_CHECK(seq.observeAndReturnWantsReset(emptyTreeSet() + page(0), epsilon * 0, gb));
	BOOST_CHECK(seq.observeAndReturnWantsReset(emptyTreeSet() + page(1), epsilon * 1, gb));
	BOOST_CHECK(!seq.observeAndReturnWantsReset(emptyTreeSet() + page(0), epsilon * 2, gb));
	BOOST_CHECK(!seq.observeAndReturnWantsReset(emptyTreeSet() + page(1), epsilon * 3, gb));
	BOOST_CHECK(seq.currentActivePages() == emptyTreeSet() + page(0) + page(1));

	//now move to a new clique
	BOOST_CHECK(seq.observeAndReturnWantsReset(emptyTreeSet() + page(2), epsilon * 4, gb));
	BOOST_CHECK(!seq.observeAndReturnWantsReset(emptyTreeSet() + page(1), epsilon * 5, gb));
	BOOST_CHECK(!seq.observeAndReturnWantsReset(emptyTreeSet() + page(2), epsilon * 6, gb));
	BOOST_CHECK(!seq.observeAndReturnWantsReset(emptyTreeSet() + page(1), epsilon * 7, gb));
	BOOST_CHECK(seq.currentActivePages() == emptyTreeSet() + page(2) + page(1));
	}

